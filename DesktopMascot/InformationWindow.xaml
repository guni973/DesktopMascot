<Window x:Class="DesktopMascot.InformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopMascot"
        mc:Ignorable="d"
        Title="InformationWindow" Height="300" Width="300"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="294" Margin="0,0,-0.4,-0.4" VerticalAlignment="Top" Width="294">
            <TabItem Header="メッセージ">
                <Grid Background="#FFE5E5E5">
                    <TextBlock x:Name="murmur" HorizontalAlignment="Left" Margin="0,0,-0.2,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="266" Width="289" FontSize="18.667"/>
                </Grid>
            </TabItem>
            <TabItem Header="天気">
                <Grid Background="#FFE5E5E5">
                    <TextBlock x:Name="weather" HorizontalAlignment="Left" Margin="0,0,-0.2,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="266" Width="289" FontSize="18.667"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
